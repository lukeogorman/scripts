
sample=${1}
reference="../GCA_000001405.15_GRCh38_no_alt_plus_hs38d1_analysis_set.fna"
panel="../24_snp_panel.bed"
bam=${sample}.recalibrated.bam
bcf=${sample}.24snp.bcf
vcf=${sample}.24snp.vcf.gz
filteredVcf=${sample}.24snp.filtered.vcf.gz

bcftools mpileup -Ou -f $reference -R $panel $bam | bcftools call -m -Ob -o $vcf

bcftools filter -e 'QUAL<10 || DP<4' -Oz -o $filteredVcf $vcf
